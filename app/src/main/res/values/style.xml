<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  FONT STYLE  -->

    <style name="font_bold">
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="font_regular">
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <!--  CHIP STYLE  -->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="checkedIconVisible">true</item>
    </style>

    <style name="chipFontStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>


    <!--  TAB LAYOUT  -->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnSurface">@color/black8</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

</resources>