<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--  LEFT  -->
    <RelativeLayout
        android:id="@+id/chatLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontalMargin"
        android:background="@drawable/circle_corner_background"
        android:backgroundTint="@color/grey"
        android:padding="@dimen/postMargin">

        <TextView
            android:id="@+id/messageTextLeft"
            style="@style/font_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black8"
            tools:text="Hai ahmad apa kabar ?" />

    </RelativeLayout>

    <!--  RIGHT  -->
    <RelativeLayout
        android:id="@+id/chatRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontalMargin"
        android:layout_alignParentEnd="true"
        android:background="@drawable/circle_corner_background"
        android:backgroundTint="@color/primary"
        android:padding="@dimen/postMargin"
        tools:ignore="RelativeOverlap">

        <TextView
            android:id="@+id/messageTextRight"
            style="@style/font_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            tools:text="Hai ahmad apa kabar ?" />

    </RelativeLayout>
</RelativeLayout>