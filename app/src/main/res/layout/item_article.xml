<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/articleImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/horizontalMargin"
        android:scaleType="centerCrop"
        android:src="@drawable/arc"
        app:riv_corner_radius="10dp" />

    <TextView
        android:id="@+id/articleTitle"
        style="@style/font_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:textColor="@color/black8"
        tools:text="Ini Kronologis Putra Ridwan Kamil Hilang Terseret Arus di Swiss" />

    <TextView
        android:id="@+id/articleDesc"
        style="@style/font_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginTop="@dimen/postMargin"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/black8"
        tools:text="@tools:sample/lorem/random" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginTop="@dimen/postMargin"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/articleSource"
            style="@style/font_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/postMargin"
            android:layout_weight="1"
            android:textColor="@color/black8"
            android:textSize="12sp"
            tools:text="Kompas.com" />

        <TextView
            android:id="@+id/articleDate"
            style="@style/font_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black8"
            android:textSize="12sp"
            tools:text="1 Bulan yang lalu" />
    </LinearLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipsGroup"
        style="@style/Widget.MaterialComponents.Chip.Entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/horizontalMargin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/postMargin"
        android:background="@color/grey" />

</LinearLayout>