<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/articleImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/horizontalMargin"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:scaleType="centerCrop"
        android:src="@drawable/arc"
        app:riv_corner_radius="@dimen/minCornerRadius" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipsGroup"
        style="@style/Widget.MaterialComponents.Chip.Entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginEnd="@dimen/horizontalMargin" />

    <TextView
        android:id="@+id/articleTitle"
        style="@style/font_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:textColor="@color/black8"
        tools:text="Ini Kronologis Putra Ridwan Kamil Hilang Terseret Arus di Swiss" />

    <TextView
        android:id="@+id/articleDesc"
        style="@style/font_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginTop="@dimen/postMargin"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/black8"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/articleSource"
        style="@style/font_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/postMargin"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:textColor="@color/grey7"
        android:textSize="12sp"
        tools:text="Kompas.com - 1  hari yang lalu" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/horizontalMargin"
        android:background="@color/grey" />

</LinearLayout>