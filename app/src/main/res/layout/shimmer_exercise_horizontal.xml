<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginEnd="@dimen/horizontalMargin"
    app:cardCornerRadius="@dimen/minCornerRadius"
    app:cardBackgroundColor="@color/shimmerBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/exerciseImage"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:background="@color/shimmerColor1"
            android:scaleType="centerCrop"
            android:contentDescription="@string/food" />

        <View
            android:id="@+id/foodName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/shimmerTextSize2"
            android:layout_margin="10dp"
            android:background="@drawable/circle_corner_background"
            android:backgroundTint="@color/shimmerColor1" />
    </LinearLayout>
</androidx.cardview.widget.CardView>